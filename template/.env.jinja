# Environment Configuration for {{ project_name }}
# Copy this file to .env and customize values for your environment

# Application Settings
ENVIRONMENT=development
DEBUG=true

# Server Settings
HOST=0.0.0.0
PORT=8000

# CORS Settings (comma-separated)
ALLOWED_ORIGINS=http://localhost:8000,http://localhost:3000,http://localhost:5173

# Database Settings
DATABASE_URL=postgresql://postgres:postgres@localhost/{{ module_name }}
DATABASE_TEST_URL=postgresql://postgres:postgres@localhost/{{ module_name }}_test

# Security Settings
SECRET_KEY=change-me-in-production

# Admin Credentials (change in production!)
ADMIN_PASSWORD=admin123

# Rate Limiting
DEFAULT_RATE_LIMIT=100/minute
HEALTH_RATE_LIMIT=10/minute