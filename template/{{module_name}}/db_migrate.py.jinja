async def migrate_database(db_pool: asyncpg.Pool) -> None:
    """
    Main migration function that can be called from db.py.

    Args:
        db_pool: Active database connection pool

    This function takes the pool as a parameter to avoid circular imports
    between db.py and db_migrate.py.
    """
    try:
        if not db_pool:
            logger.error("Database pool not initialized")
            raise RuntimeError("Database pool is None")

        migrator = DatabaseMigrator(db_pool)
        await migrator.migrate_database()

    except Exception as e:
        logger.error(f"Migration failed: {e}")
        raise


